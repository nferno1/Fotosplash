<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleNext" />

    <Button
        android:id="@+id/getStarted"
        style="@style/Theme.nferno1.fotosplash.Drawable"
        android:textAllCaps="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/getStarted"
        android:visibility="gone"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintTop_toTopOf="@id/slider"
        tools:visibility="visible"/>

    <View
        android:id="@+id/circleNext"
        style="@style/Theme.nferno1.fotosplash.Drawable"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/eliplse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circleBack"
        style="@style/Theme.nferno1.fotosplash.Drawable"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/eliplse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/arrowNext"
        style="@style/Theme.nferno1.fotosplash.Drawable"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/arrowBack"
        style="@style/Theme.nferno1.fotosplash.Drawable"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/round_next"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>